	    <div class="form-group">
	      <label for="pwd"></label>
	      <input type="text" class="form-control" placeholder="Enter Username" name="username" value="" required>
	    </div>
      <label class="radio-inline"><input type="radio" name="optradio" value="room1" checked>Room1</label>
