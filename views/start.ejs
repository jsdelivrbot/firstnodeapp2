                          <label for="upload" class="file-upload__label" style='width:14%; cursor: pointer;'><i class="fa fa-paperclip" aria-hidden="true"></i></label>
                          <input id="upload" class="file-upload__input" type="file" name="mkfile" >
                          </div>
               
                    <div class="input-group">


                        <input id="text" type="text" class="form-control input-sm"  placeholder="Type your message here..."  data-emojiable="true" autofocus />
                        <span class="input-group-btn">
                         
                            <button type="button" class="btn btn-warning btn-sm" id="btn-chat">
                                Send</button>
				
                        </span>
