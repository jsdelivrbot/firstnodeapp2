<script type="text/javascript">
    $(window).bind('beforeunload',function(){
   var pageURL = document.location.origin;
     // so that socket can  not create new session
    //return 'You may loose game, if you refresh the page!!';
    window.open(pageURL,"_self");
});
  $("document").ready(function(){

          //Initialize circle progress bar
           $('#circle').progressCircle({
              nPercent        : 0,
              showPercentText : true,
              circleSize      : 100,
              thickness       : 3
              });
          // Initializes and creates emoji set from sprite sheet
          window.emojiPicker = new EmojiPicker({
          emojiable_selector: '[data-emojiable=true]',
          assetsPath: './public/lib/img/',
          popupButtonClasses: 'fa fa-smile-o'
          });
         
          window.emojiPicker.discover();
          $('.emojiPicker').css({left:'80px', top:'12px'});
          //-----emoji end---------
        var pageURL = document.location.origin;
       var socket = io.connect(pageURL);

       var username =$("#username").val();
       var room =$("#room_name").val();
      socket.emit('newuser',username,room);   //<-- it will create new room and server

               $('#text').keypress(function(e){
                if(e.keyCode==13)
                $('#btn-chat').click();
              });

             $("#btn-chat").click(function(){
                var username =$("#username").val();
                var msg=$("#text").val();

                if(username!="" && msg!="")
                {
                    var d = new Date();
                   var ts= Math.floor(d.getTime()/1000); 

                  socket.emit('sendmsg',msg,username,ts);
                  $("#text").val('');
                }
              else
              {
                alert('Please provide required');
              }
            });

    //normal chat
       socket.on('showchat',function(sendername,numuser,msg,ts){
         if(sendername==username)
           {
              name=username;
             $('.chat').append('<li class="left clearfix"><span class="chat-img cricle_info pull-left">'+name.charAt(0).toUpperCase()+'</span> <div class="chat-body clearfix"><div class="header"><strong class="primary-font">'+name+'</strong> <small class="pull-right text-muted"> <span class="glyphicon glyphicon-time ts" data-livestamp="'+ts+'"></span></small> </div><p>'+msg+'</p> </div></li>');
          }
          else
          {
             name=sendername;
              $('.chat').append('<li class="right clearfix"><span class="chat-img cricle_info2 pull-right">'+name.charAt(0).toUpperCase()+'</span> <div class="chat-body clearfix"> <div class="header"><small class=" text-muted"><span class="glyphicon glyphicon-time ts" data-livestamp="'+ts+'" ></span></small><strong class="pull-right primary-font">'+name+'</strong></div> <p>'+msg+'</p></div></li>');
          }
    });

        //new pic send 
    socket.on('showimage', function(sendername,numuser,filename,imagepath,ts){
      //console.log(sendername);
              if(sendername==username)
             {
                name=username;
               $('.chat').append('<li class="left clearfix"><span class="chat-img cricle_info pull-left">'+name.charAt(0).toUpperCase()+'</span> <div class="chat-body clearfix"><div class="header"><strong class="primary-font">'+name+'</strong> <small class="pull-right text-muted"> <span class="glyphicon glyphicon-time ts" data-livestamp="'+ts+'"></span></small></div><a download="'+filename+'" href="'+imagepath+'" title="'+filename+'"><img alt="'+filename+'" class="img-thumbnail" src="'+imagepath+'" style:"height: 100px;width: 150px;"></a> </div></li>');
            }
            else
            {
               name=sendername;
                $('.chat').append('<li class="right clearfix"><span class="chat-img cricle_info2 pull-right">'+name.charAt(0).toUpperCase()+'</span> <div class="chat-body clearfix"> <div class="header"><small class=" text-muted"><span class="glyphicon glyphicon-time ts" data-livestamp="'+ts+'"></span></small><strong class="pull-right primary-font">'+name+'</strong></div><a download="'+filename+'" href="'+imagepath+'" title="'+filename+'"><img alt="'+filename+'" class="img-thumbnail" src="'+imagepath+'"style:"height: 100px;width: 150px;"></a></div></li>');
            }
        });

 socket.on('showvideo', function(sendername,numuser,filename,videopath,ts){
      //console.log(sendername);
              if(sendername==username)
             {
                name=username;
               $('.chat').append('<li class="left clearfix"><span class="chat-img cricle_info pull-left">'+name.charAt(0).toUpperCase()+'</span> <div class="chat-body clearfix"><div class="header"><strong class="primary-font">'+name+'</strong> <small class="pull-right text-muted"> <span class="glyphicon glyphicon-time ts" data-livestamp="'+ts+'"></span></small></div><video width="200" controls><source src="'+videopath+'" type="video/mp4">Your browser does not support HTML5 video.</video></div></li>');
            }
            else
            {
               name=sendername;
                $('.chat').append('<li class="right clearfix"><span class="chat-img cricle_info2 pull-right">'+name.charAt(0).toUpperCase()+'</span> <div class="chat-body clearfix"> <div class="header"><small class=" text-muted"><span class="glyphicon glyphicon-time ts" data-livestamp="'+ts+'"></span></small><strong class="pull-right primary-font">'+name+'</strong></div><video width="200" controls><source src="'+videopath+'" type="video/mp4">Your browser does not support HTML5 video.</video></div></li>');
            }
        });
    socket.on('notification', function(msg){
        $("#notif").html('<p>'+msg+'</p>');
        setTimeout(function() { $("#notif").html(''); }, 3000);
    });

    socket.on('broadcast',function(username){
        //alert(username);
          $('#users').html('<li><b>'+username+'</b></li>');
       
      
    });

     // Change this to the location of your server-side upload handler:
    var url = pageURL+'/upload';
    $('#upload').fileupload({
        url: url,
        dataType: 'json',
        maxFileSize: 20000000, //20mb
        done: function (e, data) {
         //  for( var k in data)
         // {
         //  console.log(k);
         // }
         // for( var x in data)
         // {
         //  console.log(data['result'].msg);
         // }
         
          console.log(data['result'].msg);
          console.log(data['result'].url);
          console.log(data['result'].type);
          var imagepath=data['result'].url;
          var imagename=data['result'].msg;
          var type=data['result'].type;
         // alert(data['result'].type);
          if(imagename!='400')
          {

            var d = new Date();
            var ts1= Math.floor(d.getTime()/1000); 
              if(type.indexOf('image') > -1) {
                //alert('image');
                  var type='image';
                  socket.emit('sendfile',imagename,imagepath,type,username,ts1);
              }
              else if(type.indexOf('video') > -1) {
                  //alert('video');
                var type='video';
               socket.emit('sendfile',imagename,imagepath,type,username,ts1);
              }
              else
              {
                  //alert('file');
                var type='file';
                socket.emit('sendfile',imagename,imagepath,type,username,ts1);
              }
         
          }
          else
          {
            alert('something is wrong');
          }
      
        },
        progressall: function (e, data) {
          
          $('#myModal').modal('show');
            var progress = parseInt(data.loaded / data.total * 100, 10);
            // $('#progress .progress-bar').css(
            //     'width',
            //     progress + '%'
            // );
            
            $('#circle').progressCircle({
              nPercent        : progress,
              showPercentText : true,
              circleSize      : 100,
              thickness       : 4

              });
             //$('#myModal').modal('hide');
            // setTimeout(function() { 
            //  $('#circle').progressCircle({
            //   nPercent        : 0,
            //   showPercentText : true,
            //   circleSize      : 100,
            //   thickness       : 3 
            //   });
            //  }, 4000);
        }
    }).prop('disabled', !$.support.fileInput)
        .parent().addClass($.support.fileInput ? undefined : 'disabled');
});

</script>
